<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.woalk.apps.xposed.ttsb"
    android:versionCode="3"
    android:versionName="Beta 1.2" xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.woalk.apps.xposed.ttsb.MainActivity"
            android:label="@string/app_name"
            android:configChanges="screenSize|orientation" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="xposedmodule"
            android:value="true" />
        <meta-data
            android:name="xposeddescription"
            android:value="Custom system bar tinting using the KitKat gradient (&quot;translucent mode&quot;)." />
        <meta-data
            android:name="xposedminversion"
            android:value="30" />
        
        <activity
            android:name="com.woalk.apps.xposed.ttsb.DetailsActivity"
            android:label="@string/title_activity_details"
            android:parentActivityName="com.woalk.apps.xposed.ttsb.MainActivity" >
        </activity>
        <activity
            android:name="com.woalk.apps.xposed.ttsb.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.woalk.apps.xposed.ttsb.MainActivity" >
        </activity>
    </application>

</manifest>
